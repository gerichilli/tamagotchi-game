{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors", // import the file that doesnt exist
        "prettier"
    ],
    "rules": {
        "no-console": 1 // disallow console statements
    },
    "plugins": ["import"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}